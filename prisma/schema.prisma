generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String        @id @default(uuid())
  email     String        @unique
  name      String?
  createdAt DateTime      @default(now()) @map("created_at")
  seenItems SeenItEntry[]

  @@map("users")
}

model SeenItEntry {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  user       User     @relation(fields: [userId], references: [id])
  tmdbId     Int      @map("tmdb_id")
  mediaType  String   @map("media_type")
  title      String
  posterPath String?  @map("poster_path")
  year       String?  @map("year")
  rating     Float?   @map("rating")
  addedAt    DateTime @default(now()) @map("added_at")

  @@unique([userId, tmdbId, mediaType])
  @@index([userId])
  @@map("watch_list_entries")
}

model CachedProduction {
  id         String   @id @default(uuid())
  tmdbId     Int      @map("tmdb_id")
  mediaType  String   @map("media_type")
  data       Json
  imdbRating Float?   @map("imdb_rating")
  cachedAt   DateTime @default(now()) @map("cached_at")

  @@unique([tmdbId, mediaType])
  @@index([tmdbId, mediaType])
  @@map("cached_productions")
}

model CachedPerson {
  id       String   @id @default(uuid())
  tmdbId   Int      @unique @map("tmdb_id")
  data     Json
  cachedAt DateTime @default(now()) @map("cached_at")

  @@index([tmdbId])
  @@map("cached_persons")
}
